#include <stdio.h>
int main()
{
    printf("Enter any number to check if its perfect or not: ");
    int i,n,sum=0;
    scanf("%d",&n);
    
    for(i=1;i<n;i++)
    {
        if(n%i==0)
        sum+=i;
    }
    if (sum==n)
        printf("Entered number: %d is a Perfect no",n);
    else
        printf("Entered number: %d is NOT a Perfect no",n);
        
}
